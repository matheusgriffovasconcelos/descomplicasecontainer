@model IEnumerable<CategoriaModel>


<header class="container d-flex justify-content-between align-tems-center">
    <div class="container mt-3">
        <h2 class="text-danger opacity-50">Lista de Categorias</h2>
    </div>
    <div class="mt-3">
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Cadastrar" class="btn btn-sm btn-outline-info"><i class="bi bi-plus"></i><span class="text-center">Nova <br> Categoria</span></a>
        }
    </div>
</header>
<hr class="text-danger opacity-50">
@if (Model.Count() > 0)
{
    <div class="container mb-5" style="height: 100vh;">
        <div class="list-group mb-2">
            <button class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    @foreach (var item in Model)
                    {
                        <span class="me-2">@item.Id - </span>
                        <span>@item.Nome</span>
                        <span class="mx-auto"></span>
                        <a asp-action="Alterar" asp-route-id="@item.Id" class="badge">
                            <i class="bi bi-pencil text-info h6" title="Alterar"></i> </a>
                        <a asp-action="Excluir" asp-route-id="@item.Id" class="badge">
                            <i class="bi bi-trash text-danger h6" title="Excluir"></i></a>
                    }
                </div>
            </button>
        </div>
    </div>
}
else
{
    <p>Não há nenhuma Categoria Cadastrada.</p>
}
</div>
