@model IEnumerable<FornecedorModel>

<header class="container d-flex justify-content-between align-tems-center">
    <div class="container mt-3">
        <h2 class="text-danger opacity-50">Lista de Fornecedores</h2>
    </div>
    <div class="mt-3">
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Cadastrar" class="btn btn-sm btn-outline-info"><i class="bi bi-plus"></i><span class="text-center">Novo <br> Fornecedor</span></a>
        }
    </div>
</header>
<hr class="text-danger opacity-50">
@if (Model.Count() > 0)
{
    <div class="container mb-5" style="height: 100vh;">
        <div class="row row-cols-12 row-cols-lg-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <a href='@($"{item.CaminhoImagem}?{DateTime.Now}")' data-lightbox="@item.Id" data-title="@item.Nome">
                            <img src='@($"{item.CaminhoImagem}?{DateTime.Now}")' class="card-img-top img-responsive img-thumbnail">
                        </a>
                        <h6 class="card-header text-center h5">@item.Nome</h6>
                        <div class="card-body">
                            <h4 class="card-title">@item.Categoria.Nome</h4>
                            @if(item.IsPremium) 
                            {
                                <p class="card-subtitle text-secondary mb-2">Premium</p>
                            }
                            <div class="card-text">
                                Localização: @item.Cidade - @item.UF <br>
                            </div>
                        </div>
                        <div class="card-footer">
                            <p class="lead-sm">Preços à partir de: R$@item.aPartir,00</p>
                        </div>
                            @if (User.IsInRole("admin"))
                            {
                                <div class="text-center p-2">
                                    <a class="btn btn-success btn-sm" asp-action="Alterar" asp-route-id="@item.Id" title="Alterar">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@item.Id" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            }
                    </div>
                </div>
            }
        </div>

    </div>
}
else
{
    <h3>Não há fornecedores cadastrados.</h3>
}
