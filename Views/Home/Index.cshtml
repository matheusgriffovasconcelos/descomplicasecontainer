@model LoginViewModel


@if (User.Identity.IsAuthenticated)
{

    <div class="container p-3">
        <div class="container mt-3">
            <p class="display-4 text-center text-danger opacity-50">Faça seu orçamento descomplicado! ;&rpar;</p>
        </div>

        <div class="p-5 text-center bg-image" style="
      background-image: url('/img/fundo.jpeg'); background-repeat: round;
    ">
            <div class="mask">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="mt-4">
                        <h1 class="mb-3 text-danger opacity-50">Orçamentos Descomplicase</h1>
                        <h4 class="mb-3 text-dark mb-5">faça seu orçamento em poucos cliques.</h4>
                        <p class="col-6 text-center mx-auto lead text-bg-dark bg-opacity-50">Clique no botão abaixo.</p>
                        <a class="btn btn-outline-dark btn-lg" asp-controller="Orcamento" asp-action="Index" role="button">Calcular</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div>
