@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <title>Autenticação</title>
</head>


<body>
    <section class="bg-light">
        <main class="container-lg container-fluid">
            <div class="row align-items-center" style="height: 100vh">
                <div class="col-8 col-lg-4 mx-auto border border-danger border-opacity-50 p-3 rounded">
                    <h1 class="display-4 mb-3 text-danger text-opacity-50 text-center">Login</h1>
                    <p>Para recrutadores(Usuário ROOT com todas funcionalidades) <br> -> login: root@email.com | senha: root</p>
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="@Model.Email" placeholder="nome@@email.com">
                            <label class="text-danger" asp-for="@Model.Email"></label>
                            <span class="small text-danger ps-2" asp-validation-for="@Model.Email"></span>

                        </div>
                        <div class="form-floating">
                            <input class="form-control" asp-for="@Model.Senha" placeholder="123456">
                            <label class="text-danger" asp-for="@Model.Senha"></label>
                            <span class="small text-danger ps-2" asp-validation-for="@Model.Senha"></span>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="@Model.Lembrar">
                            <label class="form-check-label text-primary" asp-for="@Model.Lembrar">Lembrar de mim</label>
                        </div>
                        <div>
                            <button class="btn btn-outline-danger">Entrar</button>
                        </div>
                        <div class="mb-3 mt-3">
                            <a href="#" class="text-decoration-none">Esqueci minha senha</a><br>
                            <a asp-controller="Home" asp-action="Cadastrar" class="text-decoration-none">Quero me cadastrar</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </section>
</body>

</html>
