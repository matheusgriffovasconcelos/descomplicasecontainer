@model UsuarioModel

@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" defer></script>

<div class="container-lg container-fluid my-2">
    <div class="row align-items-center" style="height: 100vh">
        <div class="col-8 col-lg-4 mx-auto border border-danger border-opacity-50 p-3 rounded">
            <h1 class="display-6 mb-3 text-info text-opacity-50 text-center">Cadastrar Usuario!</h1>
            <form asp-action="Cadastrar" method="post">
                <input type="hidden" asp-for="@Model.IdUsuario">
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="@Model.Nome" placeholder="Nome Completo">
                    <label asp-for="@Model.Nome"></label>
                    <span class="small text-danger ps-2" asp-validation-for="@Model.Nome"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="@Model.Email" placeholder="nome@@email.com">
                    <label asp-for="@Model.Email"></label>
                    <span class="small text-danger ps-2" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="@Model.Senha" placeholder="123456">
                    <label asp-for="@Model.Senha"></label>
                    <span class="small text-danger ps-2" asp-validation-for="@Model.Senha"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="@Model.ConfSenha" placeholder="123456">
                    <label asp-for="@Model.ConfSenha"></label>
                    <span class="small text-danger ps-2" asp-validation-for="@Model.ConfSenha"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <span class="text-danger" asp-validation-for="@Model.IsAdmin"></span>
                    <label asp-for="@Model.IsAdmin"></label>
                    <input type="checkbox" class="form-check-input" placeholder="" asp-for="@Model.IsAdmin">
                </div>

                <div>
                    <button class="btn btn-primary">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>

</div>